{
    "spellright.language": [
        "en_GB"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "html"
    ],
    "macros": {


        "M_commentDown": [
            "editor.action.copyLinesDownAction",
            "cursorUp",
            "editor.action.addCommentLine",
            "cursorDown"
        ],
        "M_ExternalPDFLink": [
            "editor.action.clipboardCopyAction",
            "deleteRight",
              {"command": "type", "args": {"text": "<a title=\"[[popup text]]\" target=\"_blank\" href=\"[[URL link]]\" class=\"text-dark font-weight-bolder icon-move-right\">[[The text]]&nbsp;<i class=\"fa-regular fa-file-pdf fa-lg\"></i></a>"}}
          ],
        "M_ExternalTEXTLink": [
            "editor.action.clipboardCopyAction",
            "deleteRight",
              {"command": "type", "args": {"text": "<i class=\"tooltip\">[[COMPLETE LINK HERE]]&nbsp;<i class=\"fa-solid fa-link fa-lg\"></i><span class=\"tooltiptext\">[[TOOLTIP TEXT HERE]]</span></i>"}}
          ],
          "M_ExternalIMAGELink": [
            "editor.action.clipboardCopyAction",
            "deleteRight",
                {"command": "type", "args": {"text": "<span class=\"tooltipimg\">[[TEXT GOES HERE]]&nbsp;<i class=\"fa-regular fa-file-image fa-lg\"></i><span class=\"tooltiptextimg\"><img width=\"400px\" src=\"[[IMAGE SOURCE]]\" alt=\"[[IMAGE ALT TEXT]]\">[[tooltip image text]]</span></span>"}}
            ],
        "M_InternalINFOLink": [
            "editor.action.clipboardCopyAction",
            "deleteRight",
                {"command": "type", "args": {"text": "<i class=\"tooltip\">[[TEXT HERE]] <i class=\"fa-regular fa-circle-question\"></i><span class=\"tooltiptext\">[[TOOLTIP TEXT HERE]]</span></i>"}}
            ] 
          
    },
    "grammarly.selectors": [
        {
            "language": "markdown",
            "scheme": "untitled",
            "pattern": "Untitled-1"
        },
        {
            "language": "plaintext",
            "scheme": "untitled"
        },
        {
            "language": "html",
            "scheme": "file"
        }
    ],
}